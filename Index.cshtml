@model List<User>

<h2>Список користувачів</h2>

<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Ім'я</th>
            <th>Прізвище</th>
            <th>Пошта</th>
            <th>Дата реєстрації</th>
            <th>Дії</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.Id</td>
                <td>@user.FirstName</td>
                <td>@user.LastName</td>
                <td>@user.Email</td>
                <td>@user.RegistrationDate.ToString("dd.MM.yyyy")</td>
                <td>
                    <a asp-controller="User" asp-action="UserDetails" asp-route-id="@user.Id" class="btn btn-info">Деталі</a>
                    <form asp-controller="User" asp-action="DeleteUser" method="post" style="display: inline;">
                        <input type="hidden" name="id" value="@user.Id" />
                        <button type="submit" class="btn btn-danger">Видалити</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>

<a asp-controller="User" asp-action="AddUser" class="btn btn-primary">Додати користувача</a>
